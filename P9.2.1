#include <stdio.h>

int main() {
    int n;
    int sum=0;
    printf("Enter number to be printed the sum of:");
    scanf("%d",&n);
    for(int i=1;i<=n;i++)
    {
        sum=sum+i;
        printf("sum of first %d numbers:%d\n",i,sum);
        
    }

    return 0;
}
